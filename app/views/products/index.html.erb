<div class='row'>
	<div class='large-4 columns'>
		<div class='panel'>
			<h1><small>About our products</small></h1>
			<p>Our products are the best in the business. Buy from our store if you want quality</p>
		</div>
	</div>
	
	<div class='large-8 columns'>
		<h1><small>Listing products</small></h1>
		<table>
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Price</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @products.each do |product| %>
		      <tr>
		        <td><%= product.name %></td>
		        <td><%= product.price %></td>
		        <td><%= link_to 'Show', product %></td>
		        <td><%= link_to 'Edit', edit_product_path(product) %></td>
		        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>		
	</div>
</div>