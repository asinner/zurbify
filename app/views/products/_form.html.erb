<div class='row'>
	<div class='large-4 large-offset-4'>
		<%= form_for(@product) do |f| %>

			<div class='row'>
				<div class='small-3 columns'>
					<%= f.label :name, class: 'right inline', title: 'Please give your product a name', data: { tooltip: true } %>			
				</div>
				<div class='small-9 columns'>
					<%= f.text_field :name, class: 'right inline' %>			
				</div>
			</div>

			<div class='row'>
				<div class='small-3 columns'>
					<%= f.label :price, class: 'right inline', title: 'Price your product', data: { tooltip: true } %>
				</div>
				<div class='small-9 columns'>
					<%= f.text_field :price, class: 'right inline' %>			
				</div>
			</div>

			<div class='row'>
				<div class='small-12'>
					<%= f.submit nil, class: 'button small round' %>
				</div>
			</div>

		<% end %>
		
	</div>
</div>