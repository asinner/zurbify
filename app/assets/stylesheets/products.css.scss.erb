.product-column {
	padding-right: 10px;
}
.product {
	background: rgb(250, 250, 250px);
	padding: 10px;
	border: 1px solid rgb(230, 230, 230);
}
.product .title {
	font-size: 18px;
}
.product .title .price {
	color: rgb(130, 130, 130);
}

#products {
	padding: 25px 0;
}
#product-splash {
	color: #FFF;
	background: rgb(150, 150, 150);
	padding: 100px 0;
	background: url(<%= asset_path 'unsplash-bg.jpg' %>) no-repeat center center fixed;
	background-size: cover;
	text-shadow: 0px 0px 12px rgb(0, 0, 0);
}
#product-splash h1,
#product-splash small {
	color: #FFF;
}